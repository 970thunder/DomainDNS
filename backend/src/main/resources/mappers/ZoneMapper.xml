<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.domaindns.cf.mapper.ZoneMapper">
	<resultMap id="ZoneMap" type="com.domaindns.cf.model.Zone">
		<id property="id" column="id" />
		<result property="cfAccountId" column="cf_account_id" />
		<result property="zoneId" column="zone_id" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="enabled" column="enabled" />
		<result property="syncedAt" column="synced_at" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<insert id="upsert" parameterType="com.domaindns.cf.model.Zone">
		INSERT INTO zones(cf_account_id,zone_id,name,status,enabled,synced_at)
		VALUES(#{cfAccountId},#{zoneId},#{name},#{status},#{enabled},#{syncedAt})
		ON DUPLICATE KEY UPDATE
		name=VALUES(name),status=VALUES(status),synced_at=VALUES(synced_at)
	</insert>

	<select id="list" resultMap="ZoneMap">
		SELECT * FROM zones
		<where>
			<if test="enabled!=null">enabled=#{enabled}</if>
			<if test="name!=null and name!=''">
				<if test="enabled!=null"> AND </if>
				name LIKE CONCAT('%',#{name},'%')
			</if>
			<if test="cfAccountId!=null">
				<if test="enabled!=null or (name!=null and name!='')"> AND </if>
				cf_account_id=#{cfAccountId}
			</if>
		</where>
		ORDER BY id DESC
	</select>

	<update id="setEnabled">
		UPDATE zones SET enabled=#{enabled} WHERE id=#{id}
	</update>

	<select id="findById" parameterType="long" resultMap="ZoneMap">
		SELECT * FROM zones WHERE id=#{id}
	</select>

	<select id="findByCfZoneId" parameterType="string" resultMap="ZoneMap">
		SELECT * FROM zones WHERE zone_id=#{zoneId}
	</select>

	<select id="findByName" parameterType="string" resultMap="ZoneMap">
		SELECT * FROM zones WHERE name=#{name}
	</select>

	<select id="count" resultType="int">
		SELECT COUNT(*) FROM zones
		<where>
			<if test="enabled != null">enabled = #{enabled}</if>
		</where>
	</select>
</mapper>